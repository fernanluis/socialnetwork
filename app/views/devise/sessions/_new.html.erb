<div class="col-md-6 mx-auto mb-5">
  <h2 class="center bold">Iniciar Sesi√≥n</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
    <div class="form-group">
      <%= f.label :email%><br/>
      <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email"%>
    </div>
    <div class="form-group">
      <%= f.label :password%>
      <%= f.password_field :password, class:"form-control", autocomplete: "current-password"%>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="d-flex form-group">
        <p class="ml-3"> <%= f.check_box :remember_me %></p>
        <p class="ml-2">remember_me</p>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-primary" %>
    </div>
    <% end %>

    <%= render "devise/shared/links"%>
  </div>
