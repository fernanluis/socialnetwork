<%= form_with model: @user, local: true do |form| %>
<br>
  <%= form.label :username%>
  <%= form.text_field :username%>
  <br>
  <br>
  <%= form.label :name%>
  <%= form.text_field :name%>
  <br>
  <br>
  <%= form.label :last_name%>
  <%= form.text_field :last_name%>
  <br>
  <br>
  <%= form.label :bio%>
  <%= form.text_area :bio%>
  <br>
  <br>
  <%= form.submit "Enviar"%>
<%end%>
