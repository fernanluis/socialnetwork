
  <h4>
    <%= @user.username%>
    <br>
    <br>
    <%= @user.name%>
    <%= @user.last_name%>
  </h4>
  <h4>
  Seguidores
  </h4>
  <h4>
  Publicaciones
    <%= @user.posts.count%>
