<br>
<div class="col-md-6 mx-auto mb-5">
  <div class="container p-3 mb-2 bg-success text-white rounded">
  <%= (image_tag @user.image.url, class:"rounded-circle border border-secondary") if @user.image?%><br>
    <%= @user.username%>
      <h4>
        <%= @user.name%>
        <%= @user.last_name%>
      </h4>
      <h4>
  <!--    <-%unless @are_friends%>
      	<-%= button_to friendships_path(friend_id: @user.id), method: :post, remote: true, :"data-type" => "script", class:"btn btn-primary"%>
      <-%end%>
  -->
  </div>
  <div class="container p-3 mb-2 bg-success text-white rounded">
    <h4>
    Publicaciones:
      <%= @user.posts.count%>
    </h4>
    <h4>
    Bio:
      <%= @user.bio%>
  </div>
</div>
<div class="col-md-6 mx-auto mb-5">
    <%= form_with model: @user, local: true do |form| %>
    <div class="form-group row">
      <div class="col">
        <%= form.label :username%>
        <%= form.text_field :username, class:"form-control col"%>
      </div>
    </div>

    <div class="form-group row">
      <div class="col">
        <%= form.label :name%>
        <%= form.text_field :name, class:"form-control col"%>
      </div>
    </div>

    <div class="form-group row">
      <div class="col">
        <%= form.label :last_name%>
        <%= form.text_field :last_name, class:"form-control col"%>
      </div>
    </div>

    <div class="form-group row">
      <div class="col">
        <%= form.label :bio%>
        <%= form.text_area :bio, class:"form-control col"%>
      </div>
    </div>

      <!--%= form.label :avatar%>
      <!%= form.file_field :avatar%>
      <br>
      <!%= form.label :cover%>
      <!%= form.file_field :cover%>
      <br> -->
      <%= form.submit "Update", class:"btn btn-success"%>
    <%end%>
</div>
